# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:4000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=videocall

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Email Service Configuration
# -----------------------------
# Option 1: Resend (Recommended)
RESEND_API_KEY=re_xxxxxxxxxxxx

# Option 2: SMTP (Gmail, Ethereal, etc.)
# For testing (Ethereal): Leave host empty or use smtp.ethereal.email
# For Production (Gmail): smtp.gmail.com
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="VideoCall App" <noreply@videocall.app>

# Note for Gmail:
# 1. Enable 2-Factor Authentication
# 2. Generate an "App Password"
# 3. Use that App Password as SMTP_PASS

# TURN Server (Optional - for production WebRTC)
# VITE_TURN_USERNAME=
# VITE_TURN_CREDENTIAL=
